generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Domain {
  id        String      @id @default(cuid())
  domain    String
  zoneId    String
  created   DateTime    @default(now())
  updated   DateTime    @default(now())
  Subdomain Subdomain[]
}

model Subdomain {
  id           String   @id @default(cuid())
  domain       Domain   @relation(fields: [domainId], references: [id])
  domainId     String
  type         String
  name         String
  content      String
  securityCode String   @unique
  created      DateTime @default(now())
  updated      DateTime @default(now())
}

enum StatusBlockedName {
  safe
  harmful
  suspicious
}

model BlockedName {
  id     String            @id @default(cuid())
  name   String            @unique
  reason String            @default("No reason provided")
  status StatusBlockedName @default(safe)
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  password String
  created  DateTime @default(now())
  updated  DateTime @default(now())
}
